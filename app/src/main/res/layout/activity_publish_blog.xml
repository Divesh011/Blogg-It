<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MainBGColor"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.PublishBlogActivity"
    android:paddingHorizontal="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            style="@style/ImageBrdrColor"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:src="@drawable/common_google_signin_btn_icon_dark"
            app:civ_border_width="2dp"/>

        <TextView
            style="@style/LargeTextStyle"
            android:id="@+id/IntroText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-light"
            android:textSize="25sp"
            android:text="Publish Blog"
            android:padding="4dp"/>



    </LinearLayout>


    <androidx.cardview.widget.CardView
        style="@style/BlogPostCardBG"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp">

        <EditText
            style="@style/textInputStyle"
            android:id="@+id/PublishBlogTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Blog Title"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="4dp"
            android:layout_gravity="center"
            android:inputType="text|textNoSuggestions"
            android:background="@null"

            android:textStyle="bold"
            />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/BlogPostCardBG"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="15dp"
        app:cardCornerRadius="15dp"
        android:layout_weight="1">

        <EditText
            style="@style/textInputStyle"
            android:id="@+id/PublishBlogContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Blog Description"
            android:gravity="top|start"
            android:paddingHorizontal="10dp"
            android:layout_margin="4dp"
            android:inputType="text|textNoSuggestions|textMultiLine"
            android:background="@null"
            android:scrollbars="vertical"
            android:textSize="22sp"/>

    </androidx.cardview.widget.CardView>

    <TextView
        style="@style/LargeTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:fontFamily="sans-serif-light"
        android:textSize="25sp"
        android:text="Blog Category" />

    <RadioGroup
        android:id="@+id/CategoryRG"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="8dp"

        android:padding="4dp">

            <RadioButton
                android:id="@+id/radioTech"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tech"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radioEntertainment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Entertainment"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radioEducational"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Educational"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/radioButton"
                android:layout_weight="1"/>

            <RadioButton
                android:id="@+id/radioOthers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.704"
                app:layout_constraintStart_toEndOf="@+id/radioButton3"
                app:layout_constraintTop_toBottomOf="@+id/radioButton2"
                app:layout_constraintVertical_bias="0.0"
                android:layout_weight="1"/>


    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp">

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/DiscardBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Discard"
            android:layout_marginHorizontal="8dp"/>

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/PostBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Post"/>

    </LinearLayout>

</LinearLayout>