<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BloggIt" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <style name="MainBGColor">
        <item name="android:background">@color/main_bg_color</item>
    </style>

    <style name="LargeTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MediumTextStyle">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BlogPostTitleStyle">
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="BlogPostContentStyle">
        <item name="android:textColor">#FBF2F2</item>
    </style>

    <style name="BlogPostCardBG">
        <item name="android:background">#1B1A1A</item>
        <item name="cardBackgroundColor">#1B1A1A</item>
    </style>

    <style name="ImageBrdrColor">
        <item name="civ_border_color">#F1F1F1</item>
    </style>

    <style name="BottomNavStyle">
        <item name="android:background">@color/main_bg_color</item>
        <item name="itemIconTint">@color/white</item>
        <item name="itemTextColor">@color/white</item>
    </style>

    <style name="textInputStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">#F8F2F2</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>